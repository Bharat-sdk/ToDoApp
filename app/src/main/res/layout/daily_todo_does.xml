<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:background="@drawable/bgitemdoes"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_height="100dp">
        <TextView
            android:id="@+id/daily_item"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="Buy whiskas"
            android:layout_marginStart="30dp"
            android:textColor="#000C5D"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/quantity_of_monthly_purchase"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="30dp"
            android:textColor="#000C5D"
            android:visibility="invisible"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/quantity_of_purchase"
            android:textSize="28sp"
            android:textColor="#F63EA5"
            android:textStyle="bold"
            android:text="Tomorrow"
            android:gravity="right"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>